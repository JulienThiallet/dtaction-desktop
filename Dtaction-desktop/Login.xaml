<Window x:Class="Dtaction_desktop.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dtaction_desktop"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="400">
    <Grid Background="#efefef">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock Width="200">Username</TextBlock>
            <TextBox Margin="0 3 0 7" BorderBrush="Red" BorderThickness="2" Name="TBUsername" Width="200"></TextBox>
            <TextBlock Width="200">Password</TextBlock>
            <PasswordBox Margin="0 3 0 7" BorderBrush="Red" BorderThickness="2" Name="PBPsw" Width="200"></PasswordBox>
            <Button Margin="0 10 0 10" Click="Button_Login_Click" Width="100">Connect</Button>
            <Button Click="Button_Cancel_Click" Width="100">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
