<Window x:Class="Dtaction_desktop.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dtaction_desktop"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid Background="Gray">
        <StackPanel>
            <TextBlock Width="200">Username</TextBlock>
            <TextBox Width="200"></TextBox>
            <TextBlock Width="200">Password</TextBlock>
            <TextBox Width="200"></TextBox>
            <Button Click="Button_Login_Click" Width="100">Connect</Button>
            <Button Click="Button_Cancel_Click" Width="100">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
