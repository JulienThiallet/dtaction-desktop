<Window x:Class="Dtaction_desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dtaction_desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="700" Background="#efefef">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Name="MainStackpanel">
        <Image Source="./Images/dta_logo.png" Width="200" Margin="0 00 0 0"></Image>
        <TextBlock FontWeight="Bold" FontSize="18" Width="580" Height="50" Margin="0 20 0 0" TextWrapping="Wrap" TextAlignment="Center">Bienvenue sur DTAction le meilleur gestionnaire de liste du marché.<LineBreak/> Bien meilleur que celui de l'autre groupe.</TextBlock>
        <Button BorderBrush="Red" BorderThickness="3" Click="Button_Login_Click" Width="200" Height="30" Margin="0 20 0 0">Login</Button>
        <Button BorderBrush="Red" BorderThickness="3" Click="Button_SignUp_Click" Width="200" Height="30" Margin="0 20 0 0">Sign Up</Button>
    </StackPanel>
</Window>
