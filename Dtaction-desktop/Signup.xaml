<Window x:Class="Dtaction_desktop.Signup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dtaction_desktop"
        mc:Ignorable="d"
        Title="Signup" Height="450" Width="800">
    <Grid Name="MainGrid" Background="Gray">
        <StackPanel>
            <TextBlock Width="200">Username</TextBlock>
            <TextBox Name="textboxUsername" Width="200"></TextBox>
            <TextBlock Width="200">Email</TextBlock>
            <TextBox Name="textboxEmail" Width="200"></TextBox>
            <TextBlock Width="200">Password</TextBlock>
            <PasswordBox Name="textboxPassword" Width="200"></PasswordBox>
            <TextBlock Width="200">Confirmation Password</TextBlock>
            <PasswordBox Name="textboxConfirmationPassword" Width="200"></PasswordBox>
            <Button Click="Button_SignUp_Click" Width="100">Sign Up</Button>
            <Button Click="Button_Cancel_Click" Width="100">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
